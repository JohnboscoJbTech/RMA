@using RMA.Utility
@{
    ViewBag.Title = "Export Page";
}

<div class="row">
    <div class="col-xl-12 col-sm-12 mb-12">
        <div class="card">
            <div class="card-header">
                Choose Export Criteria
            </div>
            <div class="card-body">
                <form action="~/Home/ExportResult" method="post">
                    <div class="col-xl-3">
                        <div class="form-group">
                            <div>
                                @Html.DropDownList("Type", new SelectList(Utils.GetModule(), "Id", "Name", null), "Select ElectionType", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <input type="submit" class="btn btn-primary" value="Export" />

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>