@using RMA.Models.MobileModel
@using RMA.Utility
@{
    var modules = (List<MobileModule>)Utils.GetModule();
}
<ul class="sidebar navbar-nav">
    <li class="nav-item active">
        <a class="nav-link" href="#">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>Status Board</span>
        </a>
    </li>
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-fw fa-folder"></i>
            <span>Results</span>
        </a>
        <div class="dropdown-menu" aria-labelledby="pagesDropdown">
            @foreach (var m in modules)
            {
                <a class="dropdown-item" href="@Href("~/Home/Result/" + m.Id)">@m.Name</a>
            }
        </div>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Href("~/Home/AccreditationResult")">
            <i class="fas fa-fw fa-chart-area"></i>
            <span>Accreditation Status</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Href("~/Home/Export")">
            <i class="fas fa-fw fa-download"></i>
            <span>Export</span>
        </a>
    </li>
</ul>
